                <% else %>
                      <div class = "cmt_display_rating">
                                <% if @user_signup.experience_rating < 1 %><div class = "rating_star_off">
                                  <% else %> <div class = "rating_star_on">
                                  <% end %>
                                  <%= form_for :signup, :url => signup_path(@user_signup.permalink), :via => :put do |f| %>
                                    <%= f.hidden_field :experience_rating, :value => 1 %>
                                    <%= f.submit "" %>
                                <% end %></div>

                                <% if @user_signup.experience_rating < 2 %><div class = "rating_star_off">
                                  <% else %> <div class = "rating_star_on"><% end %>
                                  <%= form_for :signup, :url => signup_path(@user_signup.permalink), :via => :put do |f| %>
                                    <%= f.hidden_field :experience_rating, :value => 2 %>
                                    <%= f.submit "" %>
                                <% end %></div>

                                <% if @user_signup.experience_rating < 3 %><div class = "rating_star_off">
                                  <% else %> <div class = "rating_star_on"><% end %>
                                  <%= form_for :signup, :url => signup_path(@user_signup.permalink), :via => :put do |f| %>
                                    <%= f.hidden_field :experience_rating, :value => 3 %>
                                    <%= f.submit "" %>
                                <% end %></div>

                                <% if @user_signup.experience_rating < 4 %><div class = "rating_star_off">
                                  <% else %> <div class = "rating_star_on"><% end %>
                                  <%= form_for :signup, :url => signup_path(@user_signup.permalink), :via => :put do |f| %>
                                    <%= f.hidden_field :experience_rating, :value => 4 %>
                                    <%= f.submit "" %>
                                <% end %></div>

                                <% if @user_signup.experience_rating < 5 %><div class = "rating_star_off">
                                  <% else %> <div class = "rating_star_on"><% end %>
                                  <%= form_for :signup, :url => signup_path(@user_signup.permalink), :via => :put do |f| %>
                                    <%= f.hidden_field :experience_rating, :value => 5 %>
                                    <%= f.submit "" %>
                                <% end %></div>
                      </div>
                <% end %>
              </div>

              <% unless @user_signup.taste_rating.nil? && @user_signup.experience_rating.nil? %>
                <div class = "margin_left_20px margin_right">
                  <div class="accordion" id="cmt_for_rating"> 
                          <div class="accordion-group add_cmt_rating_container">
                            <div class="accordion-heading">
                              <% unless Message.find_by_signup_id(@user_signup.id).nil? %>
                                <div class = "org_btn">
                                  <div class = 'margin_top_5px'><%= "Add Another Rating Comment #{image_tag('send_message.png', size:"20x20")}".html_safe %></div>
                                  <div class = "btn_image"><%= link_to image_tag('white.png', width: '100%', height: '100%'), @user_signup.signup_collapse, :data => {:toggle=>"collapse", :parent => "#cmt_for_rating"} %></div>
                                </div>
                               <% else %>
                                <div class = "org_btn">
                                  <%= "Add Rating Comment #{image_tag('send_message.png', size:"20x20")}".html_safe %>
                                  <div class = "btn_image"><%= link_to image_tag('white.png', width: '100%', height: '100%'), @user_signup.signup_collapse, :data => {:toggle=>"collapse", :parent => "#cmt_for_rating"} %></div>
                                </div>
                               <% end %>
                            </div>

                            <%= content_tag :div, :id => @user_signup.signup_collapse_inner, :class=>"accordion-body collapse" do %>
                              <div class="accordion-inner">
                                <%= form_for(@rating_msg_c, :validate => true) do |f| %>
                                    <%= f.fields_for @ratings_msg do |m| %>
                                      <%= m.text_area :message_content, :rows => 4, :placeholder => "Rating Comment" %>
                                      <%= m.hidden_field :first_flag, :value => true %>
                                      <%= m.hidden_field :order_id, :value => 0 %>
                                      <%= m.hidden_field :public_flag, :value => true %>
                                    <% end %>
                                    <%= f.hidden_field :hostevent, :value => @hostevent.permalink %>
                                    <%= f.hidden_field :signup, :value => @user_signup.permalink %> 
                                    <div class = "org_btn margin_top"><%= f.submit "      Add      " %></div>
                                  <% end %>
                              </div>
                            <% end %>
                          </div>
                  </div>
                </div>
              <% end %>
            </section>
          <% end %>
        <% end %>

        <% if signed_in? and (@hostevent.user_id == current_user.id or @hostevent.chef_id == current_user.id) %> 
          <section class = "date_container">
            <div class = "center margin_top font_josefin font_16px padding_bottom"> <%= pluralize(@hostevent.event_attend_count, 'person') %> attended </div>
          </section>
          <div> &nbsp;</div>
        <% end %>

        <% if !@hostevent.charitypolicy.nil? %> 
          <section class = "date_container">
            <div class = "center margin_top font_josefin font_16px padding_bottom"> 
              <% if signed_in? && current_user.id == @hostevent.user_id %>
                Your Event Donated
              <% else %> This Event Donated
              <% end %>
              <%= number_to_currency(@donation) %>
            </div>
          </section>

          <div> &nbsp;</div>
        <% end %>
      <% end %>    

      <% if signed_in? and current_user.active_status? and @hostevent.evt_open? %>
        <!-- <div class = "btn_w280px margin_bottom_20px"> -->
          <!-- <div class = "org_btn"> -->
            <!--%= button_to "SHARE WITH FRIENDS", root_path, :method => "get" %-->
        <!-- </div></div> -->
        
        <div class="accordion" id="invite"> 
            <div class="accordion-group btn_w280px background_white">
              <div class="accordion-heading">
                <div class = "org_btn">
                  <div class = 'margin_top_5px'>SEND INVITATION TO FRIENDS</div>
                  <div class = "btn_image"><%= link_to image_tag('white.png', width: '100%', height: '100%'), "#invite_inside", :data => {:toggle=>"collapse", :parent => "#invite"} %></div>
                </div>
              </div>
              <div id="invite_inside" class="accordion-body collapse">
                      <div class="accordion-inner">

                        <form action="/invite_to_event" method="post">
                          <textarea cols="40" id="invite_guest_emails" name="hostevent[invite_guest_emails]" placeholder = "Emails (if you would like to send to multiple addresses, seperate each by , )" rows="4"></textarea>
                          <%= hidden_field_tag :id, @hostevent.permalink %>
                          <div class = "org_btn margin_top"><input name="commit" type="submit" value="Send" /></div>
                        </form>
                      </div>
              </div>
            </div>
        </div>

        <% if @hostevent.user_id != current_user.id and @hostevent.evt_open? %>
          <div class="accordion" id="send_message_for_evt"> 
            <div class="accordion-group btn_w280px background_white">
              <div class="accordion-heading">
                <div class = "org_btn">
                  <div class = 'margin_top_5px'><%= "GET IN TOUCH &nbsp; #{image_tag('send_message.png')}".html_safe %></div>
                  <div class = "btn_image"><%= link_to image_tag('white.png', width: '100%', height: '100%'), "#msg_for_evt", :data => {:toggle=>"collapse", :parent => "#send_message_for_evt"} %></div>
                </div>
              </div>
              <div id="msg_for_evt" class="accordion-body collapse">
                      <div class="accordion-inner">
                        <%= form_for(@messagechain, :validate => true) do |f| %>
                          <%= f.text_field :title, :placeholder => "Title" %>
                          <%= f.fields_for :messages do |m| %>
                            <%= m.text_area :message_content, :rows => 4, :placeholder => "Message" %>
                            <%= m.hidden_field :first_flag, :value => true %>
                            <%= m.hidden_field :order_id, :value => 0 %>
                          <% end %>
                          <%= f.hidden_field :receiver, :value => User.find(@hostevent.user_id).permalink %>
                          <%= f.hidden_field :hostevent, :value => @hostevent.permalink %>
                          <div class = "org_btn margin_top"><%= f.submit "      Send      " %></div>
                        <% end %>
                      </div>
              </div>
            </div>
          </div>

          
          <div class = "width_280px"><%= render 'shared/follow_form' %></div>
        <% elsif @hostevent.user_id == current_user.id %>
          <% if @hostevent.event_start_date_upcoming? %><div class = "width_280px margin_bottom_20px"><div class = 'org_btn'><%= button_to "Manage Seat Requests / Edit Event", signup_requests_path(@hostevent.permalink) %></div></div>
          <% else %>
            <div class = "width_280px margin_bottom_20px"><div class = 'org_btn'><%= button_to "View Guest and Rating Details", hostevent_ratings_path(@hostevent.permalink) %></div></div>
            <div class = "width_280px margin_bottom_20px"><div class = 'org_btn'><%= button_to "Add Photos to Event", addphoto_to_event_path(@hostevent.permalink) %></div></div>
          <% end %>

          <div class="accordion" id="copy_evt_btn"> 
            <div class="accordion-group btn_w280px background_white">
              <div class="accordion-heading">
                <div class = "org_btn">
                  <div class = 'margin_top_5px'>Copy Event Details for New Event</div>
                  <div class = "btn_image"><%= link_to image_tag('white.png', width: '100%', height: '100%'), "#copy_evt_details", :data => {:toggle=>"collapse", :parent => "#copy_evt_btn"} %></div>
                </div>
              </div>
              <div id="copy_evt_details" class="accordion-body collapse">
                      <div class="accordion-inner">
                        <%= form_for @copyevt, :url => url_for(:controller => 'hostevents', :action => 'copy') do |f| %>  
                          <div id = "date"><%= f.text_field :startdate, :placeholder => "yyyy-mm-dd", class: "font_10px"%></div>
                          <div class = "margin_bottom"><%= f.time_select :mealstarttime, { :default => Time.now.change(:hour => 19), :simple_time_select => true, :minute_interval => 30, :time_separator => "", :start_hour => 8, :end_hour => 23 } %></div>
                              
                          <%= f.hidden_field :id, :value => @hostevent.permalink %>
                          <div class = "org_btn"><%= f.submit "Copy"%></div>
                        <% end %>
                      </div>
              </div>
            </div>
          </div>
        <% end %>
      <% elsif !signed_in?%>
        <% if @hostevent.event_start_date_upcoming? %>
          <div class = "date_container">
            <div class = "font_18px font_josefin padding_top_15px table_border_bottom margin_bottom align_left"> &nbsp;&nbsp;Join the Event</div>

            <div class = "padding_around_10 margin_left margin_right">
                  <%= link_to image_tag('facebook_signup_icon.png', size: '262x30'), "/auth/facebook", id: "sign_in_fb" %>
            </div>
            <div class = 'padding_bottom_15px font_josefin center font_bold'> then take a seat and contribute</div>
          </div>
        <% else %>
          <div class = "date_container">
            <div class = "font_18px font_josefin padding_top_15px table_border_bottom margin_bottom align_left"> &nbsp;&nbsp;Join Us Next Time </div>

            <div class = "padding_around_10 margin_left margin_right">
                  <%= link_to image_tag('facebook_signup_icon.png', size: '262x30'), "/auth/facebook", id: "sign_in_fb" %>
            </div>
            <div class = 'padding_bottom_15px font_josefin center font_bold'> then explore upcoming events to take a seat</div>
          </div>
        <% end %>
      <% end %>

      <div class = "date_container">
        <div class = "font_18px font_josefin padding_top_15px table_border_bottom margin_bottom align_left"> &nbsp;&nbsp;The Host</div>
        <div class = "padding_bottom_15px"><%= link_to image_tag(@hostevent.host.avatar.url(:medium), :size => "200x200", :alt => @hostevent.host.name), user_path(@hostevent.host.permalink) %></div>  
      </div>
    </aside>   
  </div>
<% end %>

