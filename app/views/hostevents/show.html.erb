<% if @hostevent.nil? %>
  <br>
      <h2>
        The chef has cancelled this event.
      </h2>
  <br>
<% elsif !@hostevent.event_start_date_upcoming? && @hostevent.eventstatus != "Open" %>
        <br>
        <h2>
          The host has cancelled this event.
        </h2>
        <br>
<% elsif !@hostevent.evt_open? and (!signed_in? or (current_user.id != @hostevent.user_id and current_user.id != @hostevent.chef_id)) %>
      <br>
      <h2>
        The host has not opened the event for sign up yet.
      </h2>
      <br>
      <% if !signed_in? %>
        <div class = 'org_font font_cuprum center padding_top margin_bottom_20px' style='font-size:22px'>If you are the host or chef of this event, please sign in to preview the event.</div>
      <% end %>
<% elsif !@chef.active_status? %>
      <div class = "font_lightgray margin_top center">
        <div class = "font_20px"> Unfortunately the host's account is closed. </div>
        <div class = "font_20px margin_top"> You can no longer view this event's details. </div>
      </div>
<% else %>
